  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #333;
      font-family: 'Poppins', sans-serif;
    }

    .todo-container {
      background: #fff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0px 5px 20px rgba(0,0,0,0.2);
      width: 100%;
      max-width: 450px;
    }

    .todo-title {
      text-align: center;
      margin-bottom: 25px;
      font-weight: 600;
      color: #2575fc;
    }

    .task-list {
      list-style: none;
      padding: 0;
    }

    .task-item {
      background: #f7f7f7;
      padding: 10px 15px;
      margin-bottom: 10px;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: 0.3s;
    }

    .task-item.completed {
      text-decoration: line-through;
      opacity: 0.7;
    }

    .btn-delete {
      background: #ff5c5c;
